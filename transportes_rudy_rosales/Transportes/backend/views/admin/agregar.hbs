<div class="container">
  <div class="row" style="margin: 200px 0;">
    <div class="col">
      <h4 class="text-center">Agregar una nueva novedad</h4><br />
      <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="Titulo"
            name="titulo"
          />
        </div><br />

        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="Subtitulo"
            name="subtitulo"
          />
        </div><br />

        <div class="form-group">
          <textarea
            type="text"
            class="form-control"
            placeholder="Cuerpo"
            name="cuerpo"
          ></textarea>
        </div><br />

        <div class="form-group">
          <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
        </div><br />

        <button type="submit" class="btn btn-primary">Agregar</button>

      </form><br />
      {{#if error}}
        {{message}}
      {{/if}}
    </div>
  </div>
</div>